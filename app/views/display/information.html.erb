<%=stylesheet_link_tag "display"%>
<div id="information1" style="margin-left: <%=@allcss.margin_left%>px;margin-top:<%=@allcss.margin_top%>px"><center><span>资讯</span></center><br/><% unless @information.nil? %>
      <% @information.each do |p| %>
  <% if @allcss.picture=="yes" %>
  <img src="<%=url_for :controller=>"information",:action=>"picture",:id=>p.id%>" style="height: 50px;width: 50px" />
  <%end%>
        <%=p.title%>---<%=p.infodetails[0...15]%><br/>
      <%end%>
        <% if @allcss.draggable=="yes"%>
        <%=javascript_include_tag :defaults%>
            <%=draggable_element("information1")%>
        <%end%>
        <%end%>
      </div>